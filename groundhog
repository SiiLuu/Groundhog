import sys
from math import *

def checkArgs(a):
    if (not a.isdigit()):
        sys.stderr.write("Error: period need to be integers.\n")
        sys.exit(84)

if (len(sys.argv) == 2 and sys.argv[1] == "-h"):
    print("SYNOPSIS")
    print("    ./groundhog period")
    print("\nDESCRIPTION")
    print("    period\t   the number of days defining a period")
    sys.exit(0)

if (len(sys.argv) == 2):
    checkArgs(sys.argv[1])
    sys.exit(0)
sys.exit(84)